<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ServicosFragment"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/titulo_servicos"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="371dp"
        android:layout_height="115dp"
        android:layout_marginTop="28dp"
        android:text="Garantir a qualidade nunca é uma tarefa simples (nem fácil) em uma empresa. No começo, é o próprio “carinho dos donos” que traz esta segurança. Mas conforme a operação vai crescendo, fica praticamente inviável “ver o trabalho” que cada pessoa está realizando."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Indicadores de desempenho"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="384dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Os níveis intermediários de gerência e supervisão vão surgindo, novos fornecedores vão sendo incluídos no processo e assim por diante. Até que chega um ponto, em toda empresa, onde é preciso buscar meios de garantir a qualidade dos produtos e serviços oferecidos aos clientes. É neste momento que naturalmente surge a necessidade da adoção de um SGQ, ou Sistema de Gestão da Qualidade Total."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>